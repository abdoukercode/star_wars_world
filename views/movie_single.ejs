<!DOCTYPE html>
<html lang="en">
  <head>
  <% include partials/head %>

  </head>
  <body>
        <% include partials/header %>

        <div id="hero-image-single" style =" background-image: url('/assets/images/<%= background %>')">
            <h1 id="hero-title"><%= title %></h1>
        </div>
    
        <div class="content-padding clearfix">
            <div class="poster-wrapper">
                <img src="/assets/images/<%= image %>" class="img-responsive" alt="">
            </div>
            <div class="description-wrapper">
                <div class="description">
                    <h2 class="movie-header">description</h2>
                    <p><%= movie.description%></p>
                </div>
                <div class="main-characters">
                    <h2 class="movie-header">Main Characters</h2>
                    <ul>
                        <% for ( actor of main_characters) {%>
                            <li> <%= actor %></li>
                        <% } %>
                    
                    </ul>
                
                </div>
            
            </div>

        </div>


    <% include partials/footer %>
  <% include partials/script %>

  </body>
</html>

